<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:textSize="64sp"
        android:gravity="bottom"
        android:text="@string/textDisplay" android:padding="16dp"

        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:columnCount="4"
        android:padding="12dp"
        android:rowCount="4">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_7"
            android:textSize="22sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_8"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_9"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/buttonDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/buttonDivider"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_4"
            android:textSize="22sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_5"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_6"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/buttonMultiplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/buttonMultiplier"
            android:textSize="22sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_1"
            android:textSize="22sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_2"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_3"
            android:textSize="22sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/buttonMinus"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/_0"
            tools:ignore="DuplicateSpeakableTextCheck"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/buttonDot"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/equal"
            android:textSize="22sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="@string/Sum"
            android:textSize="22sp"/>
    </GridLayout>
</LinearLayout>
